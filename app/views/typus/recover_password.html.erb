<% form_tag :action => 'recover_password' do %>
  <ul>
  <li><label for="email"><%= t("Email") %></label>
  <%= text_field :user, :email, :size => "20", :class => 'text' %></li>
  <li><%= submit_tag t("Recover password"), :class => 'button' %> <%= link_to t("I remember my password"), typus_login_path %></li>
  </ul>
<% end %>